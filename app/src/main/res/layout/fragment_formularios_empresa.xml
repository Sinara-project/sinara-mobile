<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_onBackground"
    tools:context=".ui.formulariosEmpresa.formulariosEmpresa">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <!-- Logo superior -->
        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/sinara_logo_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Ícone de usuário -->
        <ImageView
            android:id="@+id/iconUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="56dp"
            android:src="@drawable/profile_pic_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Botão voltar -->
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="23dp"
            android:layout_height="45dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="104dp"
            android:src="@drawable/bt_voltar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Título -->
        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Criar formulários"
            android:textColor="@color/md_theme_primaryContainer"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

        <!-- Campo de título -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/md_theme_primaryContainer"
            app:boxStrokeWidth="2dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:hintTextColor="@color/md_theme_primaryContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView19">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Título do formulário"
                android:textColor="#8193B1"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo de descrição -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout4"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxStrokeColor="@color/md_theme_primaryContainer"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/md_theme_primaryContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:hint="Descrição do formulário"
                android:padding="10dp"
                android:textColor="#8193B1"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Layout para opções de visualização -->
        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout4">

            <Button
                android:id="@+id/btnMostrarOpcoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quem verá?" />

            <LinearLayout
                android:id="@+id/layoutOpcoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/opcao1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opção 1" />

                <Button
                    android:id="@+id/opcao2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opção 2" />
            </LinearLayout>

        </LinearLayout>

        <!-- CONTAINER onde os novos cards serão adicionados -->
        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botão para adicionar novo card -->
        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Adicionar campo"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_plus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardContainer" />

        <!-- Botão para cadastrar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cadastrar"
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Criar formularios"
            android:textColor="@color/md_theme_surfaceVariant"
            android:textSize="18sp"
            app:backgroundTint="@color/md_theme_primaryFixed_highContrast"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button13" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
