<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1B54"
    tools:context=".cadastro.operario.CadastroOperarioPermissoes">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:letterSpacing="@dimen/material_emphasis_disabled_background"
        android:text="Permissões"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_salvar"
        android:layout_width="300dp"
        android:layout_height="62dp"
        android:layout_marginBottom="73dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Salvar"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:backgroundTint="#384994"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/bt_voltar3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="100dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bt_voltar"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="97dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/icone_tela_opcoes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Card 1 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#8594D4"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/formsCap"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:buttonTint="@color/white"
            android:fontFamily="@font/montserrat_medium"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Forms de Captação"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card 2 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card2"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#8594D4"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/card1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/formsCap2"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:buttonTint="@color/white"
            android:fontFamily="@font/montserrat_medium"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Forms de Pré-Tratamento"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card 3 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card3"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#8594D4"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/card2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/formsCap3"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:buttonTint="@color/white"
            android:fontFamily="@font/montserrat_medium"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Forms de Tratamento Prim."
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card 4 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card4"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#8594D4"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/card3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/formsCap4"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:buttonTint="@color/white"
            android:fontFamily="@font/montserrat_medium"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Forms de Tratamento Sec."
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card 5 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card5"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#8594D4"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/card4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/formsCap5"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:buttonTint="@color/white"
            android:fontFamily="@font/montserrat_medium"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Forms de Tratamento Ter."
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card 6 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card6"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#8594D4"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card5">

        <CheckBox
            android:id="@+id/formsCap6"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:buttonTint="@color/white"
            android:fontFamily="@font/montserrat_medium"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Forms de Distribuição"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>